<% extend('./base_sampler') %>

<div class="container mt-5 mb-5 border border-secondary rounded">
  <h2 class="mb-5 text-center">
    Liste des activités
  </h2>
  <hr>

  <div class="row">
    <% for (p of projects) { %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm" style="transition: transform 0.2s ease-in-out;">
          <div class="card-body">
            <!-- Titre de l'activité avec le code -->
            <h5 class="card-title d-flex justify-content-between align-items-center">
              <span class="text-primary fw-bold">
                <%= p.name %>
              </span>
              <!-- Code du projet dans un badge discret -->
              <span class="badge bg-secondary text-light">
                #<%= p.code %>
              </span>
            </h5>

            <!-- Description de l'activité -->
            <p class="card-text text-muted">
              <%= p.description || 'Aucune description disponible.' %>
            </p>

            <!-- Nombre d'avis en rouge et libellé en petit, aligné avec le bouton -->
            <div class="d-flex justify-content-between align-items-center mt-4">
              <div class="text-center">
                <span class="text-danger fw-bold" style="font-size: 1.8rem;">
                  <%= p.dataRowCount %>
                </span>
                <small class="text-muted d-block">
                  Nombre d'avis
                </small>
              </div>

              <!-- Bouton de formulaire aligné à droite -->
               <% if (p.formUuid) { %>
                <a href="/sampler/store/<%= p.formUuid %>" 
                  target="_blank" 
                  class="btn btn-outline-primary">
                  Remplir le formulaire
                </a>
              <% } else { %>
                <button class="btn btn-outline-primary" disabled>
                  Formulaire non disponible
                </button>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<style>
  /* Effet de survol pour soulever la carte */
  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .card-title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .card-text {
    font-size: 1rem;
    color: #6c757d;
  }

  .btn-outline-primary {
    border-color: #007bff;
    transition: background-color 0.3s ease-in-out;
  }

  .btn-outline-primary:hover {
    background-color: #007bff;
    color: #fff;
  }

  .text-danger {
    color: #dc3545;
  }

  .fw-bold {
    font-weight: bold;
  }

  small {
    font-size: 0.8rem;
  }
</style>
